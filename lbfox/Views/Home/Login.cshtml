@model lbfox.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <!-- Start form -->
        @using (@Html.BeginForm(null, null, FormMethod.Post, new { autocomplete = "off" }))
        {
            <div class="form-row">
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username", autocomplete = "off" })
                </div>
                <div class="form-group col-md-9"></div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3 align-content-center">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", autocomplete = "off" })
                </div>
                <div class="form-group col-md-9"></div>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
            <div class="form-row">@Html.ValidationSummary()</div>
        }
        <!-- End form -->
    </div>
</div>
